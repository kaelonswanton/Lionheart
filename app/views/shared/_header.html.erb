<div class="bg-gray-100 mb-8">
  <div class="mx-20 p-4 flex justify-between items-center">
    <%# icon %>
    <div class="">
      <%= link_to image_tag('logo.svg', size: "50x50"), root_path %>
    </div>
    
    <div class="flex">
      <%# search %>
      <div class="">
        <%= search_form_for @q, url: products_path, html: { method: :get } do |f| %>
          <%= f.search_field :name_cont, placeholder: "Search...", class: "w-96" %>
          <%= f.submit "Search", class: "btn" %>
        <% end %>
      </div>
    </div>
    <div class="">
    <%# three buttons %>
      <div class="flex">
        <%# login %>
        <% if !current_user %>
          <div class="flex flex-col items-center mr-8">
              <p>
                <%= link_to new_user_session_path do %>
                  <%= heroicon 'user', options: { class: 'h-6 w-6' }%>
                  <p>Log in</p>
                <% end %>
              </p>
          </div>
        <% else %>
          <div class="flex flex-col items-center mr-8">
            <p>
              <% if current_user && current_user.admin? %>
                <%= link_to admin_base_index_path do %>
                  <%= heroicon 'shield-check', options: { class: 'h-6 w-6' }%>
                <p>Admin</p>
                <% end %>
              <% end %>
            </p>
          </div>
        
         <div class="flex flex-col items-center mr-8">
            <%# edit %>
            <p>
              <%= link_to edit_user_registration_path do %>
                <%= heroicon 'user', options: { class: 'h-6 w-6' }%>
                <p>Edit</p>
              <% end %>
            </p>
          </div>
          <%# logout %>
          <div class=" mr-8 ">
            <p>
              <%= button_to destroy_user_session_path, method: :delete, class: "flex flex-col items-center" do %>
                <%= heroicon 'user', options: { class: 'h-6 w-6' }%>
                <p>Log out</p>
              <% end %>
            </p>
          </div>
        <% end %>
        <%# cart %>
          <div class="flex flex-col items-center">
            <p>
              <%= link_to '#' do %>
                <%= heroicon 'shopping-cart', options: { class: 'h-6 w-6' } %>
                <p>Cart</p>
              <% end %>
            </p>
        </div>
      </div>
    </div>
  </div>
</div>
