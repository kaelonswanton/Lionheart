<div class="flex justify-center">
  <%= form_for [:admin, @post] do |f| %>

    <div class="flex flex-col mb-4">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>

    <div class="btn">
      <%= f.submit %>
    </div>

  <% end %>
</div>