<div class="mx-20">
  <div class="flex justify-around">
    <%# image %>
    <div class=" w-1/2 mr-20">
      <%= image_tag @product.image %>
    </div>

    <%# contents %>
    <div class="flex flex-col w-1/2">
      <p class="text-6xl mb-4"><%= @product.name.upcase %></p>
      <p class="text-xl mb-4"><%= number_to_currency(@product.price) %>
      <p class="mb-8"><%= link_to "Add to cart", line_items_path(:product_id => @product.id), class: "btn w-full" %></p>
      <p class=""><%= @product.description %></p>
    </div>
  
  
  
  </div>
</div>