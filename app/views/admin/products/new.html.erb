<div class="flex justify-center">
  <%= form_with(model: @product, url: admin_products_path, local: true) do |f| %>
    <h2 class="text-4xl mb-4">Create new product</h2>
    <div class="mb-4 flex flex-col">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <div class="flex flex-col">
      <%= f.label :categories %>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |box| %>
        <div class="flex items-center">
          <%= box.check_box class: "mr-8" %>
          <%= box.label %>
        </div>
      <% end %>
    </div>
    
    <div class="btn ">
      <%= f.submit %>
    </div>
  <% end %>
</div>

